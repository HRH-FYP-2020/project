                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C0AC65"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="9dp"
                android:text="Latest Income Tax Return:"
                android:textColor="@color/member_form_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/doc_taxReturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="#FFA3996E"
                android:fontFamily="@font/georgia_bold"
                android:onClick="Upload"
                android:tag="3"
                android:text="Choose File"
                android:textAlignment="center" />

