<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3_box_land"
    tools:context=".visatoFormActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="101dp"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="154dp"
        android:layout_marginLeft="154dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        android:layout_marginBottom="22dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="42dp"
        android:fontFamily="@font/georgia_bold"
        android:text="VISA RECOMMENDATION LETTER:"
        android:textAlignment="center"
        android:textColor="@color/member_form_text"
        android:textSize="20dp" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/georgia_bold"
                android:text="Visa application details"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C0AC65"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Name of Organization:"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/organisation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="Organization's Name"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Person's Name:"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="person's name"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Profession/Designation:"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/visa_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="Enter your profession"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Purpose of Visit:"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/visit_purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="Enter your purpose"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Name of Project"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="Enter your project"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Funding Organization:"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/funding_organisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="Enter Name"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Address of Stay:"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/stay_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="Enter Address"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="City/Town to be Visited:"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/visit_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="Enter city"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="No. of Persons:"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/no_of_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="no. of person"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Stay Duration:"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/stay_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="Enter Duration"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Type of Application"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/visa_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Flight Arrival Date:"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <Button
                android:id="@+id/flight_arrival_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFA3996E"
                android:fontFamily="@font/georgia_bold"
                android:onClick="FlightArrivalDate"
                android:text="Select Date" />

            <EditText
                android:id="@+id/flight_arrival_dateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:editable="false"
                android:hint="Date Appears Here"
                android:textAlignment="center"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Flight No. (Arrival):"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/flight_arrival_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="Enter Flight no."
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Flight Departure Date:"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <Button
                android:id="@+id/flight_departure_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFA3996E"
                android:fontFamily="@font/georgia_bold"
                android:onClick="FlightDepartureDate"
                android:text="Select Date" />

            <EditText
                android:id="@+id/flight_departure_dateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:editable="false"
                android:hint="Date Appears Here"
                android:textAlignment="center"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Flight No. (Departure):"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/flight_departure_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="Enter flight no."
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="2dp"
                android:text="Agenda Details:"
                android:textColor="@color/member_form_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/agenda_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/member_form_text"
                android:hint="Enter Details"
                android:textColor="@color/member_form_text"
                android:textColorHint="@color/member_form_text" />

            <Button
                android:id="@+id/submitVisaForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_square"
                android:fontFamily="@font/georgia_bold"
                android:onClick="submit_form"
                android:text="SUBMIT" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>