<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4_box"
    tools:context=".visaFromActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="101dp"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="154dp"
        android:layout_marginLeft="154dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        android:layout_marginBottom="22dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="113dp"
        android:layout_marginRight="42dp"
        android:fontFamily="@font/georgia_bold"
        android:text="Documents FORM:"
        android:textAlignment="center"
        android:textColor="@color/member_form_text"
        android:textSize="20dp" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/georgia_bold"
                android:text="Required documents"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/member_form_text"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C0AC65"></LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="9dp"
                android:text="Visa Request on Letterhead:"
                android:textColor="@color/member_form_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/VisaReqLetterhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="#FFA3996E"
                android:fontFamily="@font/georgia_bold"
                android:onClick="UploadDOC"
                android:tag="1"
                android:text="Choose File"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C0AC65"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="9dp"
                android:text="Passport:"
                android:textColor="@color/member_form_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/passport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="#FFA3996E"
                android:fontFamily="@font/georgia_bold"
                android:onClick="UploadDOC"
                android:tag="2"
                android:text="Choose File"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C0AC65"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="9dp"
                android:text="CNIC (Front):"
                android:textColor="@color/member_form_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/cnicFront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="#FFA3996E"
                android:fontFamily="@font/georgia_bold"
                android:onClick="UploadDOC"
                android:tag="3"
                android:text="Choose File"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C0AC65"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="9dp"
                android:text="CNIC (Back):"
                android:textColor="@color/member_form_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/cnicBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="#FFA3996E"
                android:fontFamily="@font/georgia_bold"
                android:onClick="UploadDOC"
                android:tag="4"
                android:text="Choose File"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C0AC65"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="9dp"
                android:text="Invitation Letter:"
                android:textColor="@color/member_form_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/inviteLetter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="#FFA3996E"
                android:fontFamily="@font/georgia_bold"
                android:onClick="UploadDOC"
                android:tag="5"
                android:text="Choose File"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C0AC65"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="9dp"
                android:text="List of Employees:"
                android:textColor="@color/member_form_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/employeeList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="#FFA3996E"
                android:fontFamily="@font/georgia_bold"
                android:onClick="UploadDOC"
                android:tag="6"
                android:text="Choose File"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C0AC65"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="9dp"
                android:text="Employee Req./Application Letter:"
                android:textColor="@color/member_form_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/employeeApplicationLetter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="#FFA3996E"
                android:fontFamily="@font/georgia_bold"
                android:onClick="UploadDOC"
                android:tag="7"
                android:text="Choose File"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C0AC65"></LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/georgia_bold"
                android:padding="9dp"
                android:text="Appointment Letter of Employee:"
                android:textColor="@color/member_form_text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/appointmentLetter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="#FFA3996E"
                android:fontFamily="@font/georgia_bold"
                android:onClick="UploadDOC"
                android:tag="8"
                android:text="Choose File"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#C0AC65"></LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_square"
                android:fontFamily="@font/georgia_bold"
                android:onClick="submitVisaForm"
                android:text="SUBMIT" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>